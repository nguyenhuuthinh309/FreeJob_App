<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/item_post.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/detail_item"
    app:cardElevation="2dp"
    android:background="@drawable/custom_item"
    app:cardCornerRadius="2dp"
    app:cardBackgroundColor="#1A000000"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:id="@+id/linearHeader_post"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@drawable/bovien_white_gradient3"
            android:weightSum="2"
            android:padding="8dp"
            android:gravity="center"
            >

            <ImageView

                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_weight="0"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_don_main"/>
            <TextView
                android:id="@+id/masothuexacnhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="JobFree"
                android:textSize="20sp"

                android:textColor="@color/black"
                android:layout_marginLeft="8dp"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/bg_isNewView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearHeader_post"

            android:paddingLeft="8dp"
            >

            <TextView
                android:id="@+id/tencongtyxacnhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Tuyển dụng dev full stack - Salary Up to $3000"
                android:textSize="18sp"
                android:autoSizeMinTextSize="18sp"
                android:autoSizeMaxTextSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>


        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_marginLeft="300dp"
        android:id="@+id/btn_add_to_list"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="0"
        android:text="Chờ Phê Duyệt"
       android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@drawable/bg_bogoctron3"
        android:scaleType="centerCrop" />
</LinearLayout>

